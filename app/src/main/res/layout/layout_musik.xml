<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/silver"
    tools:context=".AudioActivity">

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@color/silver"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:padding="10dp">
        ----------------------------------------------------------------------------------------------------
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="horizontal"
            android:background="@color/colorPrimaryDark"
            android:gravity="center">
            <ImageView
                android:layout_width="80dp"
                android:layout_height="100dp"
                android:background="@drawable/angklung" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textangklung"
                android:fontFamily="sans-serif-smallcaps"
                android:text="ANGKLUNG"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="25dp"/>
            <ImageView
                android:layout_width="80dp"
                android:layout_height="100dp"
                android:background="@drawable/angklung"
                android:layout_marginLeft="10dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-smallcaps"
                android:text="Tap button to play angklung"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="15dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_margin="3dp"
            android:clipToPadding="true"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:orientation="vertical">

                <Button
                    android:id="@+id/dotes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="3dp"
                    android:layout_weight="1"
                    android:background="@drawable/buttonstylepink"
                    android:text="Do"
                    android:textColor="@color/colorPrimaryDark"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:orientation="vertical">

                <Button
                    android:id="@+id/retes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="3dp"
                    android:layout_weight="1"
                    android:background="@drawable/buttonstylepink"
                    android:text="Re"
                    android:textColor="@color/colorPrimaryDark"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:orientation="vertical">

                <Button
                    android:id="@+id/mites"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="3dp"
                    android:layout_weight="1"
                    android:background="@drawable/buttonstylepink"
                    android:text="Mi"
                    android:textColor="@color/colorPrimaryDark" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:orientation="vertical">

                <Button
                    android:id="@+id/fates"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="3dp"
                    android:layout_weight="1"
                    android:background="@drawable/buttonstylepink"
                    android:text="Fa"
                    android:textColor="@color/colorPrimaryDark"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:clipToPadding="false"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:orientation="vertical">

                <Button
                    android:id="@+id/sotes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="3dp"
                    android:layout_weight="1"
                    android:background="@drawable/buttonstylepink"
                    android:text="So"
                    android:textColor="@color/colorPrimaryDark"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:orientation="vertical">

                <Button
                    android:id="@+id/lates"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="3dp"
                    android:layout_weight="1"
                    android:background="@drawable/buttonstylepink"
                    android:text=" La"
                    android:textColor="@color/colorPrimaryDark"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:orientation="vertical">

                <Button
                    android:id="@+id/sites"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="3dp"
                    android:layout_weight="1"
                    android:background="@drawable/buttonstylepink"
                    android:text="Si"
                    android:textColor="@color/colorPrimaryDark"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:orientation="vertical">

                <Button
                    android:id="@+id/do2tes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="3dp"
                    android:layout_weight="1"
                    android:background="@drawable/buttonstylepink"
                    android:text="Do"
                    android:textColor="@color/colorPrimaryDark"/>
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:layout_width="340dp"
            android:layout_height="170dp"
            android:background="@drawable/suweorajamu" />
        ------------------------------------------------------------------------------------------------
    </LinearLayout>

</android.support.constraint.ConstraintLayout>