<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/colorPrimaryDark">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:id="@+id/relative1"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:background="@color/colorPrimaryDark"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Servis Laptop"
            android:gravity="center"
            android:textSize="35dp"
            android:textColor="@color/white"
            android:fontFamily="sans-serif-smallcaps"
            android:textStyle="bold"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/relative2"
        android:layout_below="@+id/relative1"
        android:background="@color/white"
        android:paddingLeft="5dp"
        android:paddingRight="5dp">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Deskripsi Kerusakan"
            android:background="@color/white"
            android:textColorHint="@color/colorPrimaryDark"
            android:textSize="19sp"
            android:textColor="@color/colorPrimaryDark"
            android:id="@+id/deskripsilaptop"
            android:fontFamily="sans-serif-smallcaps"/>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/relative3"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_below="@+id/relative2"
        android:background="@color/white"
        android:paddingLeft="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upload Gambar :"
            android:textSize="15dp"
            android:textColor="@color/colorPrimaryDark"
            android:fontFamily="sans-serif-smallcaps"/>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/relative4"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:layout_below="@+id/relative3"
        android:background="@color/white"
        android:paddingLeft="2dp">

        <ImageView
            android:id="@+id/upgambar1"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/upload" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/relative5"
        android:layout_below="@id/relative4"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingLeft="5dp"
        android:paddingRight="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Merk Laptop :"
            android:layout_gravity="center"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="15sp"
            android:fontFamily="sans-serif-smallcaps"/>
        <EditText
            android:id="@+id/etextmerklaptop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Masukkan disini"
            android:textColorHint="@color/colorPrimaryDark"
            android:layout_gravity="center"
            android:background="@color/white"
            android:textSize="15sp"
            android:textColor="@color/colorPrimaryDark"
            android:paddingLeft="5sp"
            android:fontFamily="sans-serif-smallcaps"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/relative6"
        android:layout_below="@id/relative5"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingLeft="5dp"
        android:paddingRight="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Versi Laptop :"
            android:textColor="@color/colorPrimaryDark"
            android:layout_gravity="center"
            android:textSize="15sp"
            android:fontFamily="sans-serif-smallcaps"/>
        <EditText
            android:id="@+id/etextversilaptop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Masukkan disini"
            android:layout_gravity="center"
            android:background="@color/white"
            android:textSize="15sp"
            android:textColorHint="@color/colorPrimaryDark"
            android:textColor="@color/colorPrimaryDark"
            android:paddingLeft="5sp"
            android:fontFamily="sans-serif-smallcaps"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/relative7"
        android:layout_below="@id/relative6"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingLeft="5dp"
        android:paddingRight="5dp">
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:text="Pilih kang service"
            android:textColor="@color/colorPrimaryDark"
            android:id="@+id/buttonpilihkang"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@color/silver">
            <Button
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Syarat dan ketentuan"
                android:layout_below="@id/relative7"
                android:id="@+id/btnterm"
                android:textSize="10sp"
                android:textColor="@color/white"
                android:fontFamily="sans-serif-smallcaps"
                android:background="@color/colorPrimaryDark"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"/>

            <CheckBox
                android:id="@+id/chkBox1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/btnterm"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="15dp"
                android:fontFamily="sans-serif-smallcaps"
                android:text="Dengan mencentang kotak ini, anda telah menyetujui syarat dan ketentuan yang berlaku"
                android:textColor="@color/colorPrimaryDark" />

            <Button
                android:id="@+id/btn_send"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/chkBox1"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@color/colorPrimaryDark"
                android:fontFamily="sans-serif-smallcaps"
                android:text="SEND REQUEST SERVICE"
                android:textColor="@color/white" />
    </LinearLayout>
</LinearLayout>

